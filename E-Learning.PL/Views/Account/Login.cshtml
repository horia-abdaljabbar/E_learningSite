@model LoginVM
@{
    ViewData["Title"] = "Login";
    Layout = "~/Views/Shared/_AuthLayout.cshtml";
}
<link href="~/homePage/css/bootstrap.min.css" rel="stylesheet">
<link rel="stylesheet" href="~/css/styleSimple.css">



<!-- Sing in  Form -->
<section class="sign-in">

    <div class="container">
        <a class="text-decoration-underline" asp-controller="Home" asp-action="Index"> <figure><img src="~/imageAccount/arrow.svg" alt="sing up image" class="arrow"> </figure></a>
        <div class="signin-content">
            <div class="signin-image flex-column d-flex align-items-center justify-content-center">
                <figure><img src="~/imageAccount/Login.png" alt="sing up image"></figure>


            </div>

            <div class="signin-form">
                <h1 class="form-title text-center">Login</h1>
                <form method="POST" class="register-form" id="login-form" asp-action="Login" asp-controller="Account">
                    <div class="form-group">
                        <label asp-for="Email"><i class="fa-solid fa-user"></i></label>
                        <input asp-for="Email" placeholder="Your Email" />
                        <span asp-validation-for="Email" class="text-danger"></span>

                    </div>
                    <div class="form-group">
                        <label asp-for="Password"><i class="zmdi zmdi-lock"></i></label>
                        <input asp-for="Password" placeholder="Password" />
                        <span asp-validation-for="Password" class="text-danger"></span>

                    </div>
                    <div class="form-group">
                        <input asp-for="RememberMe" class="agree-term" />
                        <label asp-for="RememberMe"><span><span></span></span>Remember me</label>
                    </div>
                    <div class="form-group d-flex justify-content-between ">
                        <a class="text-decoration-underline text-secondary" asp-controller="Account" asp-action="ForgetPassword">Forget Password?</a>
                        <a class="text-decoration-underline text-secondary" asp-controller="Account" asp-action="Register">Create An Account?</a>

                    </div>
                    <div class="form-group form-button">
                        <input type="submit" name="signin" id="signin" class="form-submit" value="Log in" />
                    </div>

                     

                </form>
            </div>
        </div>
    </div>
</section>

