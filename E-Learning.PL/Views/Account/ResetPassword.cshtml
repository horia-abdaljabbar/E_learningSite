@model ResetPasswordVM
@{
    ViewData["Title"] = "ResetPassword";
    Layout = "~/Views/Shared/_AuthLayout.cshtml";
}

<link href="~/homePage/css/bootstrap.min.css" rel="stylesheet">



<section class="sign-in">
    <div class="container">
        <div class="signin-content">
            <div class="signin-image">
                <figure><img src="images/signin-image.jpg" alt="sing up image"></figure>
                <a href="#" class="signup-image-link">Reset Password</a>
            </div>

            <div class="signin-form">
                <h2 class="form-title text-center">Reset Password</h2>
                <form method="POST" class="register-form" id="login-form" asp-action="ResetPassword" asp-controller="Account">
                    
                    <div class="form-group">
                        <label asp-for="NewPassword"><i class="zmdi zmdi-lock"></i></label>
                        <input asp-for="NewPassword" placeholder="New Password" />
                        <span asp-validation-for="NewPassword" class="text-danger"></span>

                    </div>
                    <div class="form-group">
                        <label asp-for="ConfirmPassword"><i class="zmdi zmdi-lock"></i></label>
                        <input asp-for="ConfirmPassword" placeholder="Confirm New Password" />
                        <span asp-validation-for="ConfirmPassword" class="text-danger"></span>

                    </div>
                    <div class="form-group form-button">
                        <input type="submit" name="signin" id="signin" class="form-submit" value="reset" />
                    </div>
                    <input asp-for="Email" type="hidden"/>
                    <input asp-for="Token" type="hidden" />

                </form>
            </div>
        </div>
    </div>
</section>

