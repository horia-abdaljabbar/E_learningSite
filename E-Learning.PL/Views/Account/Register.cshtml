@model RegisterVM

@{
    ViewData["Title"] = "Register";
    Layout = "~/Views/Shared/_AuthLayout.cshtml";
}
<link href="~/homePage/css/bootstrap.min.css" rel="stylesheet">
<link rel="stylesheet" href="~/css/styleSimple.css">



<section class="signup">
    <div class="container">
        <a class="text-decoration-underline" asp-controller="Home" asp-action="Index"> <figure><img src="~/imageAccount/arrow.svg" alt="sing up image" class="arrow"> </figure></a>

        <div class="signup-content">
            <div class="signup-form">
                <h2 class="form-title text-center">Sign up</h2>
                <form method="POST" class="register-form" id="register-form" asp-action="Register" asp-controller="Account">
                    <div class="form-group">
                        <label for="name"><i class="zmdi zmdi-account material-icons-name"></i></label>
                        <input asp-for="UserName" placeholder="Your Name" />
                        <span asp-validation-for="UserName" class="text-danger"></span>

                    </div>
                    <div class="form-group">
                        <label for="email"><i class="zmdi zmdi-email"></i></label>
                        <input asp-for ="Email" placeholder="Your Email" />
                        <span asp-validation-for="Email" class="text-danger"></span>

                    </div>
                    <div class="form-group">
                        <label for="pass"><i class="zmdi zmdi-lock"></i></label>
                        <input asp-for="Password" placeholder="Password" />
                        <span asp-validation-for="Password" class="text-danger"></span>

                    </div>
                    <div class="form-group">
                        <label for="re-pass"><i class="zmdi zmdi-lock-outline"></i></label>
                        <input asp-for="ConfirmPassword" placeholder="Repeat your password" />
                        <span asp-validation-for="ConfirmPassword" class="text-danger"></span>

                    </div>
                    <div class="form-group form-button  d-flex justify-content-between">
                        <input type="submit" name="signup" id="signup" class="form-submit" value="Register" />
                        <a class="text-decoration-underline text-secondary" asp-controller="Account" asp-action="Login">Already A Memeber?</a>

                    </div>

                </form>
            </div>
            <div class="signup-image flex-column d-flex align-items-center justify-content-center">
                <figure><img src="~/imageAccount/RegisterNew.png" class="h-100 w-100" alt="sing up image"></figure>
            </div>
        </div>
    </div>
</section>

