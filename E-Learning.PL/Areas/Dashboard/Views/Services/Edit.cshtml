@model ServiceFormVM


@section Header {
Edit Services ...
}

<div class="col-md-9  m-auto w-50">

    <div class="card card-primary">
        <div class="card-header">
            <h3 class="card-title">Edit Service</h3>
        </div>


        <form asp-controller="Services" asp-action="Edit" asp-route-id="@Model.Id">
            <div class="card-body">
                <div class="form-group">
                    <label asp-for="Name">Service Name</label>
                    <input asp-for="Name" class="form-control" placeholder="Enter Service Name">
                </div>
                <div class="form-group">
                    <label asp-for="Description">Service Description</label>
                    <input asp-for="Description" class="form-control textArea" placeholder="Enter Service Description">
                </div>
                <div class="form-group">
                    <label asp-for="IsDeleted"></label>
                    <input asp-for="IsDeleted">
                    <span>@(Model.IsDeleted ? "yes" : "no")</span>
                </div>

            </div>

            <div class="card-footer">
                <button type="submit" class="btn btn-primary">Submit</button>
            </div>
        </form>
    </div>
</div>

